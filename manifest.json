{
  "manifest_version": 3,
  "name": "AI Tweet Reply Extension",
  "version": "1.0",
  "description": "A Chrome extension that generates AI replies to tweets using your own OpenAI API key",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.svg"
  },
  "icons": {
    "128": "images/icon.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://www.x.com/*",
        "https://www.twitter.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/twtreply.png"],
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://www.x.com/*",
        "https://www.twitter.com/*"
      ]
    }
  ]
} 