{
  "manifest_version": 3,
  "name": "Twiply - AI Tweet Reply using Gemini/OpenAI API key",
  "version": "1.1",
  "description": "A Chrome extension that generates AI replies to tweets using your own Gemini/OpenAI API key",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon-16x16.png"
  },
  "icons": {
    "16": "images/icon-16x16.png",
    "48": "images/icon-48x48.png",
    "128": "images/icon-128x128.png",
    "256": "images/icon-256x256.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://www.x.com/*",
        "https://www.twitter.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/twtreply.png"],
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://www.x.com/*",
        "https://www.twitter.com/*"
      ]
    }
  ]
} 